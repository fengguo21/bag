page{
    background:white;
}
.container-box{background:white;height: 100vh}
.img-box{padding: 32rpx;background-color: #fff;border-bottom: 1rpx solid #e5e5e5;position: relative;display:flex;}
.img-box image{width: 686rpx;height: 686rpx;background-color: #f9f9f9}
.input-row{
    margin: 0rpx auto;

    border-top: 1rpx solid #e5e5e5;
    display: flex;
    align-items: center;
    height: 88rpx;
    padding: 0 32rpx; 
    background-color: #fff;
    font-size: 34rpx;
    color: #000
}

.input-row input{margin-left: 100rpx;flex: 1}
.mybtn{width:686rpx;margin: 60rpx auto }
.mask{position: fixed;top: 0;left: 0;z-index: 3; width: 100%;height: 100%;opacity: 0;}


.goods-tab-nav{
    display: inline-block;
    width: 33.33%;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #ededed;
    box-sizing: border-box;
    text-align: center;
    color: #c7c7cb;
}
.goods-tab-nav.on{
    color: #bcaa8a;
    border-bottom: 5rpx solid #bcaa8a;
}


.orders-box{
    color: #999;
    font-size: 28rpx;
}
.orders{
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #e9e9e9;
    text-align: center;
}
.orders-list{
    padding-left: 30rpx;
    border-bottom: 20rpx solid #ededed;
}
.orders-list:last-child{
    border-bottom: 0;
}
.orders-number{
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.orders-detail{
    position: relative;
    height: 120rpx;
    padding: 0rpx 20rpx 17rpx 170rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.orders-detail image{
    position: absolute;
    left: 0;
    top: 20rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.orders-detail view{
    line-height: 60rpx;
}
.orders-detail .orders-status{
    position: absolute;
    right: 20rpx;
    top: 35rpx;
    height: 120rpx;
    line-height: 120rpx;
    color: #b42f2d;
}
.orders-footer{
    height: 60rpx;
    line-height: 60rpx;
    color: #2f2f2f;
    padding:15rpx 30rpx 15rpx 0;
}
.orders-footer .orders-btn{
    float: right;
    width: 180rpx;
    height: 60rpx;
    line-height:60rpx;
    border-radius: 6rpx;
    background: #ffaf0e;
    color: #fff;
}

.orders-btn-pay{
    background-color: #f44336 !important;
}

.orders-btn-receive{
    background-color: #795548 !important;
}

.no-orders{
  text-align: center;
  padding: 100rpx 0;
  font-size: 28rpx;
  color:#cccccc;
}

.no-orders image{
  width:262.8rpx;
  height:201.6rpx;
  margin: 0 auto;
  display: block;
  margin-bottom: 40rpx;
}

.tips{
    text-align: center;
    color: #cccccc;
    padding: 20rpx;
    font-size: 26rpx;
}

.step-1{
    color: #f44336 !important;
}
.step-2{
    color: #2196F3 !important;
}
.step-3{
    color: #795548 !important;
}
.step-4{
    color: #4CAF50 !important;
}
.step-6{
    color: #9E9E9E !important;
}


.transaction-item{
    border-bottom: 2rpx solid #e3e3e3;
    display:flex;
    padding:0;
    padding-top: 15rpx;
    padding-bottom: 15rpx;
    font-size: 34rpx;
}
.transaction-item text{
    display:inline-block;
    padding: 20rpx;
}
.transaction-sort{
    width: 150rpx;  
    text-align: left; 
}
.transaction-no{
    width: 100rpx;
    text-align: left;   
}
.transaction-name{
    text-align:right;  
    flex:1
}

.indexTab-active{
    color: #bcaa8a;
}

.img-box wx-image{
    width: 128rpx;
    height: 128rpx;
}

.qrcode-right{
    flex: 1;
    padding-left: 20rpx;
    font-size: 26rpx;
}

.qrcode-right view{
    margin-bottom: 20rpx;
}

.qrcode-right navigator{
    margin-bottom:0rpx;
    border:1px solid #ffaf0e;
    width:200rpx;
    padding: 15rpx;
    border-radius:40rpx;
    text-align:center;
}

.count-box{
     display:flex;
     margin: 30rpx 0;
     text-align:center;
     color:#c3c3c3;
}

.count-column1{
    width:33.33%;
    text-align:center;
    border-right:1rpx solid #e5e5e5;
}

.count-column3{
        width:33.33%;
     margin-bottom:20rpx;
     text-align:center;
}

.count-column1 view, .count-column3 view{
     margin-bottom:20rpx;
     color:#333333;
}

.withdraw-btn{
    margin: 0 50rpx;
    background: #ffaf0e !important;
}

.index-tab-box{
    color:#c3c3c3;
    margin-top:50rpx;
    font-size:34rpx;
    text-align:center;
}

.index-tab-box text{
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.index-box{
    margin:0 30rpx;
}