@import '../common/common.wxss';
swiper {
    height: 321.5rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}

.select-title,.newest-title{
    width: 100%;
    padding:30rpx 0;
    height: 40rpx;
    color: #AB956D;
    text-align: center;
}
.select-top-small{
    width: 375rpx;
    height: 375rpx;
    float: left;
}
.select-bottom,.select-top{
    width: 100%;
    height: 375rpx;
}
.select-top-small image,.select-bottom image,.select-top-small navigator,.select-bottom navigator{
    display: block;
    width: 100%;
    height: 100%;
}

.newest-box{
    padding:0 40rpx;
}
.newest-box .newest-list{
   /* display: inline-block;
    width: 325rpx;*/
    

    margin:0 20rpx 20rpx 0;
    border-radius: 10px;
   /* text-align: center;*/
    /*background: #f5f6f5;*/
}
.newest-box .newest-list navigator{
    display: flex;
}
.newest-box .newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-box .newest-list image{
    width: 285rpx;
    height: 285rpx;
    margin: 20rpx 0 10rpx;
}
.newest-box .newest-list .newest-content{
    padding: 20rpx 0 0 20rpx;
}
.newest-box .newest-list .newest-text{
    font-size: 32rpx;
    margin-bottom: 20rpx;
}

.newest-box .newest-list .price{
    color: #ffaf0e;
}

.footer-version{
    color: lightgray;
    text-align: center;
    margin: 30rpx;
    font-size: 24rpx;
}

.footer-version image{
    width: 32rpx;
    height: 38rpx;
    display: block;
    margin: 0 auto;
    margin-bottom: 10rpx;
}